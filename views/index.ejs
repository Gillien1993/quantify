<html>
    <head>
        <title> ToDo App </title>
    </head>

    <body>
        <div class="container">
            <h2> A Simple ToDo List App </h2>
            <form action ="/addtask" method="POST">
                <input type="text" name="new_task_title" placeholder="add new task">

                <select name="new_task_category" placeholder="task category">
                    <option value="ltg">Long Term Goals</option>
                    <option value="pp">Personal Projects</option>
                    <option value="work">Work</option>
                    <option value="others">Others</option>
                </select>

                <!--<input type="text" name="newtaskcategory" placeholder="task category">-->
                <button> Add Task </button>
                <h2> Added Task </h2>
                <% for( var i = 0; i < tasks.length; i++){ %>
                    <li><input type="checkbox" name="check" value="<%= tasks[i]._id %>" /> <%= tasks[i].title %> </li>
                <% } %>
                <button formaction="/removetask" type="submit"> Remove </button>
                <h2> Completed task </h2>
                <% for(var i = 0; i < completed.length; i++){ %>
                    <li><input type="checkbox" checked value="<%= completed[i].id %>"><%= completed[i].title %> </li>
                <% } %>
            </form>
        </div>
    </body>
</html>